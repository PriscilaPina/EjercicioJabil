@model JabilEjercicio.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Create Customers</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer1" class="control-label">Customer</label>
                <input asp-for="Customer1" class="form-control" />
                <span asp-validation-for="Customer1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prefix" class="control-label"></label>
                <input asp-for="Prefix" class="form-control" />
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Fkbuilding" class="control-label"></label>
                <select asp-for="Fkbuilding" class ="form-control" asp-items="ViewBag.Fkbuilding"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
