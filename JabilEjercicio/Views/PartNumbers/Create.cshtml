@model JabilEjercicio.Models.PartNumber

@{
    ViewData["Title"] = "Create";
}

<h1>Create Part Number</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartNumber1" class="control-label">PartNumber</label>
                <input asp-for="PartNumber1" class="form-control" />
                <span asp-validation-for="PartNumber1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fkcustomer" class="control-label"></label>
                <select asp-for="Fkcustomer" class ="form-control" asp-items="ViewBag.Fkcustomer"></select>
            </div>
            <div class="form-group">
                <label asp-for="Available" class="control-label"></label>
                <input type="checkbox" asp-for="Available" class="form-control" />
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
